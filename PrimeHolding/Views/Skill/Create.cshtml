@using PrimeHolding.Entities;
@model PrimeHolding.ViewModel.SkillVM.CreateVM
@{
	
	this.Layout = "/Views/Shared/SharedView.cshtml";
	
	ViewData["title"] = "CREATE SKILL";
}

<fieldset>
	<legend>CREATE SKILL</legend>
	<form action="/Skill/Create" method="post">

		<div class="grid">
			
			<div class="row">
				<div class="col-1">
					<!--Username:-->
					@Html.LabelFor(m => m.Title)
				</div>
				<div class="col-2">

					@Html.TextBoxFor(m => m.Title)
				</div>
				<div class="col-2">

					@Html.ValidationMessageFor(m => m.Title)
				</div>
			</div>
			<div class="row">
				<div class="col-1">
					@Html.LabelFor(m => m.Description)
				</div>
				<div class="col-2">

					@Html.TextAreaFor(m => m.Description)
				</div>
				<div class="col-2">
					@Html.ValidationMessageFor(m => m.Description)
				</div>
			</div>

			
			<div class="row">
				<div class="col-1"></div>
				<div class="col-2">
					<a class="right" href="/Skill/Index">Back</a>
					<input type="submit" class="right" value="Save" />
				</div>
			</div>
		</div>
	</form>
</fieldset>


