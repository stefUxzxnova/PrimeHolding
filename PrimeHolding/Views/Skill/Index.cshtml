@using PrimeHolding.Entities;
@model PrimeHolding.ViewModel.SkillVM.IndexVM
@{
	//използва css файла от папка shared
	this.Layout = "/Views/Shared/SharedView.cshtml";
	//title на html файла е home
	ViewData["title"] = "Skill";
}

<p>
	Skill Controller
</p>
<a href="/Skill/CREATE">NEW</a>
<div class="grid">
	@foreach (Skill skill in Model.Skills)
	{
		<div class="row">
			<div class="col-2">@skill.Title</div>
			<div class="col-2">@skill.Description</div>
			<div class="col-3">
				<a href="/Skill/Delete?Id=@skill.Id">delete</a>

			</div>
		</div>
	}
</div>
